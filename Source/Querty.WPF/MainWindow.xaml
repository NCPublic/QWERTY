<Window x:Class="Querty.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Querty.WPF"
        xmlns:custom="clr-namespace:QUERTY.SlidingTextControl;assembly=QUERTY.SlidingTextControl"
        mc:Ignorable="d"
        Title="QUERTY" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <custom:SlidingText Text="{Binding WelcomeMessage}"
                                FontFamily="{StaticResource RobotoRegular}"
                                FontSize="{StaticResource FontsizeMedium}"
                                Margin="400 0 0 0" MinWidth="410"/>

        </StackPanel>
    </Grid>
</Window>
